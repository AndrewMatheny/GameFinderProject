<div class="container text-center">
<h2>Add a New Game</h2>
<%= form_for @game do |f| %>
    Name of Game:<%= f.text_field :name %><br><br>
    Developer : <%= f.text_field :developer %><br><br> 
    Release Date : <%= f.text_field :release_date %><br><br> 
    Game Genre: <br> <%= f.collection_check_boxes(:genre_ids, Genre.all, :id, :name) %><br>

    If you don't see a genre that matches the game you can
    <%= link_to "add one!", new_genre_path%><br><br>
    
    <%= f.submit %>
<% end %>
</div>
