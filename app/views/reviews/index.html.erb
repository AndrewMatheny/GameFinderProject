<div class="container text-center">
<h2>All Reviews</h2>

<ul>
<% @reviews.each do |review| %>
    <li class="container text-center">
        <%= review.game.name %> - Reviewed by <%= review.user.name %><br>
        <%= link_to review.snippet, review %> Score: <%= review.score %>/10
    </li>
    <br>
    <% end %>
</ul>
</div>